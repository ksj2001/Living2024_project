    <script>
        function checkFindPwq(){
            let formname = document.formname;

            let pwa = document.getElementById('pwa');
            if(pwa.value === ""){
			    alert('답변 항목은 필수 입력값입니다.');
			    return;
		    }

            formname.submit();
        }
    </script>
